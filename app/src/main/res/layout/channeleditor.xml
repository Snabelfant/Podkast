<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/channeleditor_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Id"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/channeleditor_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:textSize="25dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Navn"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/channeleditor_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textSize="25dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:text="Rss-url"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/channeleditor_rssurl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textSize="25dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Publisert etter"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/channeleditor_earliestpubdate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>